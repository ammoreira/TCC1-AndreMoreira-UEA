<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/checkWifiAbleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:text="wifi habilitado ?" />

    <Button
        android:id="@+id/startwifiscan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkWifiAbleButton"
        android:layout_below="@+id/checkWifiAbleButton"
        android:text="@string/startscan" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp" >

        <RadioButton
            android:id="@+id/wifion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/wifioff"
            android:layout_alignBottom="@+id/wifioff"
            android:layout_alignRight="@+id/startwifiscan"
            android:checked="true"
            android:text="wifiOn" />

        <RadioButton
            android:id="@+id/wifioff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/startwifiscan"
            android:layout_marginRight="16dp"
            android:layout_marginTop="48dp"
            android:layout_toLeftOf="@+id/radioGroup1"
            android:text="wifiOff" />
    </RadioGroup>

</RelativeLayout>
